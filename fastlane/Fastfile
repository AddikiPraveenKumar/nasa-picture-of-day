# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Run SwiftLint"
  lane :lint do
    swiftlint(
      mode: :lint,
      strict: false,
      raise_if_swiftlint_error: false
    )
  end

  desc "Run unit tests only (no UI tests)"
  lane :test do
    lint
    run_tests(
      scheme: "NASAAPODApp",
      devices: ["iPhone 16"],
      clean: true,
      only_testing: ["NASAAPODAppTests"],  # Only run unit tests
      skip_testing: ["NASAAPODAppUITests", "NASAAPODAppUITestsLaunchTests"],  # Explicitly skip UI tests
      code_coverage: true,
      output_directory: "./fastlane/test_output"
    )
  end

  desc "Build app"
  lane :build do
    build_app(
      scheme: "NASAAPODApp",
      export_method: "development",
      clean: true,
      skip_codesigning: true,
      skip_archive: true
    )
  end

  desc "Full CI pipeline (lint + test)"
  lane :ci do
    lint
    test
  end
end